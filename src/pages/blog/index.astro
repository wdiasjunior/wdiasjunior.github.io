<style>
  .post_list {
    display: flex;
    flex-direction: column;
    gap: 26px;
    padding-top: 16px;

    .post_item {
      display: flex;
      flex-direction: column;

      :is(span):first-child {
        color: var(--text-faded);
        font-size: 0.85rem;
        font-style: italic;
      }

      :is(span):last-child {
        font-size: 1.125rem;
        font-weight: bold;
      }

      :is(span):last-child:hover {
        color: var(--accent);
        text-decoration: underline;
      }
    }

    .no_posts {
      font-style: italic;
      margin-top: 16px;
    }
  }
</style>
